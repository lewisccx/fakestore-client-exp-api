    <apikit:config name="fakestore-client-eapi-config" api="resource::706f4d0a-e4a3-40fb-8365-ae5ac1f0a8d7:fakestore-client-exp-api:1.0.7:raml:zip:fakestore-client-exp-api.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
